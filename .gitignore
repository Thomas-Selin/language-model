.DS_Store
.pytest_cache
.vscode/
.local/

# Ignore all data folders and contents
data/

# Allow specific folder structures to be tracked
!data/
!data/input/
!data/input/chat-align/
!data/output/
!data/output/logs/

# Ignore all contents in data/output except logs folder
data/output/*
!data/output/logs/

# Ignore all contents (including subfolders) in these folders
data/input/chat-align/**
data/output/logs/**

# Keep .gitkeep files
!data/input/chat-align/.gitkeep
!data/output/logs/.gitkeep

# Keep specific parquet file for training
!data/input/chat-align/question_answer_dataset.parquet

# Explicitly ignore the generated context_data.parquet
data/input/context_data.parquet

# Python-generated files
__pycache__/
*.py[oc]
build/
dist/
wheels/
*.egg-info

# Virtual environments
.venv
